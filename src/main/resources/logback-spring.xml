<?xml version="1.0" encoding="UTF-8"?>
<!--El archivo Logback nos permite simplificar la informacion que se enviara por consola al
 ejecutar nuestra aplicacion-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %-5level: %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>